@{
}

@model IEnumerable<TDanhGia>

<div id="makereview"></div>

<p class="refresh" id="refresh">Refresh</p>
<div id="reviews"></div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("MakeReview", "SeeReviews")',
                success: function (response) {
                    $("div#makereview").html(response)
                }
            });
            $.ajax({
                url: '@Url.Action("RefreshReview", "SeeReviews")',
                success: function (response) {
                    $("div#reviews").html(response);
                }
            });
        });

        $("p#refresh").click(function (e) {
            $.ajax({
                url: '@Url.Action("RefreshReview", "SeeReviews")',
                success: function (response) {
                    $("div#reviews").html(response);
                },
                error: function (xhr, status, error) {
                    alert("Error occurred: " + error);
                }
            });
        });
    </script>
}